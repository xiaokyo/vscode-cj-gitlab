{
  "name": "cj-gitlab",
  "displayName": "CJ GitLab",
  "description": "GitLab integration for CJ project",
  "version": "0.1.8",
  "publisher": "xiaokyo",
  "icon": "resources/gitlab.png",
  "engines": {
    "vscode": "^1.96.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaokyo/vscode-cj-gitlab"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cj-gitlab.publishToTest",
        "title": "Publish to Test"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cj-gitlab-view",
          "title": "CJ GitLab",
          "icon": "resources/gitlab.svg"
        }
      ]
    },
    "views": {
      "cj-gitlab-view": [
        {
          "id": "cjGitlab",
          "name": "CJ GitLab",
          "type": "webview",
          "icon": "resources/gitlab.svg"
        }
      ]
    },
    "configuration": {
      "title": "CJ GitLab",
      "properties": {
        "cj-gitlab.apiUrl": {
          "type": "string",
          "default": "",
          "description": "GitLab API URL"
        },
        "cj-gitlab.token": {
          "type": "string",
          "default": "",
          "description": "GitLab Personal Access Token"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build-vsix": "vsce package",
    "vs:publish": "vsce publish",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^0.24.0"
  }
}
